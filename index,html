    <script>
        function showTab(tabName, element) {
            document.querySelectorAll('.tab-content').forEach(tab => tab.classList.remove('active'));
            document.querySelectorAll('.nav-tab').forEach(tab => tab.classList.remove('active'));
            document.getElementById(tabName + '-tab').classList.add('active');
            element.classList.add('active');
        }

        document.addEventListener('DOMContentLoaded', function() {
            const plotlyColors = {
                blue: '#1e3a5f',
                lightBlue: '#4a90a4',
                accent: '#87ceeb',
                gray: '#6c757d',
                lightGray: '#f8f9fa'
            };

            const plotlyLayout = {
                font: { family: "'Source Sans Pro', sans-serif", color: plotlyColors.blue },
                paper_bgcolor: 'rgba(0,0,0,0)',
                plot_bgcolor: 'rgba(0,0,0,0)',
                margin: { t: 50, b: 50, l: 60, r: 40 },
                title: { font: { family: "'Playfair Display', serif", size: 24 } }
            };

            // --- GRÁFICOS ANÁLISIS 2025 ---
            
            // 1. Distribución por Rutas
            const rutasData = [{
                labels: ['La Cumbre (63km)', 'Chuspipata (31km)', 'Chacaltaya (88km)'],
                values: [192, 90, 53],
                type: 'pie',
                hole: .4,
                marker: { colors: [plotlyColors.blue, plotlyColors.lightBlue, plotlyColors.accent] },
                hoverinfo: 'label+percent',
                textinfo: 'value'
            }];
            const rutasLayout = {...plotlyLayout, title: 'Distribución de Participantes por Ruta'};
            Plotly.newPlot('distribucion_rutas_chart', rutasData, rutasLayout, {responsive: true});

            // 2. Distribución por Género
            const generoData = [{
                labels: ['Hombres', 'Mujeres'],
                values: [255, 80],
                type: 'pie',
                marker: { colors: [plotlyColors.blue, plotlyColors.accent] },
                hoverinfo: 'label+percent',
                textinfo: 'value'
            }];
            const generoLayout = {...plotlyLayout, title: 'Distribución por Género'};
            Plotly.newPlot('distribucion_genero_chart', generoData, generoLayout, {responsive: true});

            // 3. Distribución por Edades
            const edadesData = [{
                x: [22, 35, 41, 28, 33, 45, 19, 52, 38, 26, 31, 48, 24, 37, 43, 29, 55, 61, 18, 36, 40, 27, 34, 49, 23, 58],
                type: 'histogram',
                marker: { color: plotlyColors.lightBlue }
            }];
            const edadesLayout = {
                ...plotlyLayout,
                title: 'Distribución de Edades',
                xaxis: { title: 'Edad' },
                yaxis: { title: 'Cantidad de Participantes' }
            };
            Plotly.newPlot('distribucion_edades_chart', edadesData, edadesLayout, {responsive: true});

            // 4. Distribución Geográfica
            const geoData = [{
                x: ['Bolivia', 'Perú', 'Chile', 'Argentina', 'Ecuador'],
                y: [235, 50, 34, 10, 6],
                type: 'bar',
                marker: { color: plotlyColors.blue }
            }];
            const geoLayout = {
                ...plotlyLayout,
                title: 'Participantes por País',
                yaxis: { title: 'Número de Participantes' }
            };
            Plotly.newPlot('distribucion_geografica_chart', geoData, geoLayout, {responsive: true});

            // 5. Perfil de Altitud
            const altitudData = [{
                x: [0, 31, 63, 88],
                y: [1000, 2800, 4650, 5280],
                type: 'scatter',
                mode: 'lines+markers',
                fill: 'tozeroy',
                line: { color: plotlyColors.lightBlue, width: 4 },
                marker: { color: plotlyColors.blue, size: 8 }
            }];
            const altitudLayout = {
                ...plotlyLayout,
                title: 'Perfil de Altitud de la Ruta Completa',
                xaxis: { title: 'Distancia (km)' },
                yaxis: { title: 'Altitud (msnm)' }
            };
            Plotly.newPlot('perfil_altitud_chart', altitudData, altitudLayout, {responsive: true});

            // --- GRÁFICOS ANÁLISIS HISTÓRICO ---

            // 6. Evolución de Participación
            const participacionData = [{
                x: [2012, 2013, 2014, 2015, 2016, 2017, 2018, 2019, 2022, 2023, 2024],
                y: [70, 85, 100, 125, 150, 175, 190, 200, 160, 180, 195],
                type: 'scatter',
                mode: 'lines+markers',
                line: { color: plotlyColors.blue, width: 3 }
            }];
            const participacionLayout = {
                ...plotlyLayout,
                title: 'Evolución de Participantes (2012-2024)',
                xaxis: { title: 'Año' },
                yaxis: { title: 'Nº de Participantes' }
            };
            Plotly.newPlot('evolucion_participacion_chart', participacionData, participacionLayout, {responsive: true});
            
            // 7. Mejores Tiempos Históricos
            const tiemposData = [{
                x: [2012, 2014, 2016, 2018, 2019, 2023, 2024],
                y: [325, 305, 280, 265, 255.75, 260, 258], // Tiempos en minutos
                text: ['5:25:15', '5:05:00', '4:40:00', '4:25:00', '4:15:45', '4:20:00', '4:18:00'],
                type: 'bar',
                marker: { color: plotlyColors.lightBlue },
                hoverinfo: 'x+text'
            }];
            const tiemposLayout = {
                ...plotlyLayout,
                title: 'Mejores Tiempos (Ruta 63km)',
                xaxis: { title: 'Año' },
                yaxis: { title: 'Tiempo (minutos)', autorange: 'reversed' }
            };
            Plotly.newPlot('mejores_tiempos_chart', tiemposData, tiemposLayout, {responsive: true});

            // 8. Participación Femenina Histórica
            const femeninaData = [{
                x: [2012, 2013, 2014, 2015, 2016, 2017, 2018, 2019, 2022, 2023, 2024],
                y: [10, 12, 15, 18, 22, 25, 28, 33.3, 26, 29, 31],
                type: 'scatter',
                mode: 'lines',
                fill: 'tozeroy',
                line: { color: plotlyColors.accent }
            }];
            const femeninaLayout = {
                ...plotlyLayout,
                title: 'Evolución de Participación Femenina (%)',
                xaxis: { title: 'Año' },
                yaxis: { title: 'Porcentaje (%)' }
            };
            Plotly.newPlot('participacion_femenina_chart', femeninaData, femeninaLayout, {responsive: true});
        });
    </script>
</body>
